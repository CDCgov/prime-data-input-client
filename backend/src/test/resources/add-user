mutation addUser(
    $firstName: String,
    $middleName: String,
    $lastName: String!,
    $suffix: String,
    $email: String!,
    $organizationExternalId: String!,
    $role: ApiOrganizationRole!,
    ){
  addUser(
    firstName: $firstName
    middleName: $middleName
    lastName: $lastName
    suffix: $suffix
    email: $email
    organizationExternalId: $organizationExternalId
    role: $role
  ) {
      id,
      firstName,
      middleName,
      lastName,
      suffix,
      email,
      permissions,
      role,
      roles,
      facilities {
        name
        id
      }
      organization {
        name
        externalId
        testingFacility {
          name
          id
        }
      }
    }
}
