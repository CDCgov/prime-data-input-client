mutation updateUserPrivileges(
    $id: ID!,
    $role: ApiOrganizationRole!,
    $accessAllFacilities: Boolean!,
    $facilities: [String!]!,
    ){
  updateUserPrivileges(
    id: $id
    role: $role
    accessAllFacilities: $accessAllFacilities
    facilities: $facilities
  ) {
      id,
      firstName,
      middleName,
      lastName,
      suffix,
      email,
      permissions,
      roles,
      roleDescription,
      facilities {
        name
        id
      }
      organization {
        name
        externalId
        testingFacility {
          name
          id
        }
      }
    }
}
