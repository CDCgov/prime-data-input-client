{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "patient.schema.json",
  "title": "Patient",
  "description": "A patient record for COVID testing",
  "type": "object",
  "properties": {
    "patientID": {
      "description": "Unique patient identifier",
      "type": "string"
    },
    "patientLastName": {
      "description": "Patient's last name",
      "type": "string"
    },
    "patientFirstName": {
      "description": "Patient's first name",
      "type": "string"
    },
    "patientMiddleName": {
      "description": "Patient's middle name",
      "type": "string"
    },
    "patientSuffix": {
      "description": "",
      "type": "string"
    },
    "patientRace": {
      "description": "Patient race",
      "type": "string"
    },
    "patientDOB": {
      "description": "Patient date of birth",
      "type": "string"
    },
    "patientGender": {
      "description": "Patient sex",
      "type": "string"
    },
    "patientEthnicity": {
      "description": "Patient ethnicity",
      "type": "string"
    },
    "patientAddress": {
      "description": "full address",
      "type": "object",
      "properties": {
        "street": {
          "description": "street address",
          "type": "string"
        },
        "street2": {
          "description": "",
          "type": "string"
        },
        "city": {
          "description": "",
          "type": "string"
        },
        "county": {
          "description": "residence county",
          "type": "string"
        },
        "state": {
          "description": "",
          "type": "string"
        },
        "zipCode": {
          "description": "residence zip code",
          "type": "string",
          "pattern": "^[0-9][0-9][0-9][0-9][0-9]$"
        }
      }
    },
    "patientPhoneNumber": {
      "description": "Patient phone number",
      "type": "string"
    },
    "patientEmail": {
      "description": "Patient email address",
      "type": "string",
      "format": "email"
    },
    "patientAge": {
      "description": "Patient age",
      "type": "integer"
    },
    "employedInHealthcare": {
      "description": "",
      "type": "string",
      "enum": ["YES", "NO", "UNK - Unknown"]
    },
    "typeOfHealthcareProfessional": {
      "description": "Going to need to figure out how to handle this, it's a lot: https://covid-19-ig.logicahealth.org/ValueSet-healthcare-occupation-value-set.html",
      "type": "string"
    },
    "residentCongregateSetting": {
      "description": "",
      "type": "string",
      "enum": ["YES", "NO", "UNK - Unknown"]
    },
    "patientResidencyType": {
      "description": "figure out how to deal with LOINC: 75617-1 Residence Type",
      "type": "string"
    }
  },
  "required": [
    "patientLastName",
    "patientFirstName",
    "patientDOB",
    "patientGender",
    "patientStreet",
    "patientCity",
    "patientZipCode",
    "patientPhoneNumber",
    "employedInHealthcare",
    "residentCongregateSetting"
  ],
  "if": {
    "properties": {
      "employedInHealthcare": {
        "const": {
          "type": "YES"
        }
      }
    }
  },
  "then": {
    "dependencies": {
      "employedInHealthcare": ["typeOfHealthcareProfessional"]
    }
  },
  "if": {
    "properties": {
      "residentCongregateSetting": {
        "const": {
          "type": "YES"
        }
      }
    }
  },
  "then": {
    "dependencies": {
      "residentCongregateSetting": ["patientResidencyType"]
    }
  }
}
